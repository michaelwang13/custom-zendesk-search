{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./built",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "~/*": ["./*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "module": "es2020",
    "types": ["vite/client", "node"]
  },
  "include": ["./index.js", "./src/**/*"],
  "exclude": ["./src/__tests__/**/*"]
}
